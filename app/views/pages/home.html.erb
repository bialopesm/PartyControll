<div class="container-fluid d-flex flex-column justify-content-between" style="background-color: #fff;">
  <div class="text-center" style="margin-bottom: 50px;">
    <%= link_to "Login", new_user_session_path, class: "btn btn-lg btn-warning rounded-pill px-5 py-3 shadow-sm", style: "background-color: #FFC107; border: none; font-weight: 600;" %>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <!-- Create Event Box -->
    <div class="col-md-6 mb-4">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Create New Event</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: Event.new, local: true) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :name, "Event Name" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter event name" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :event_type, "Event Type" %>
              <%= f.select :event_type,
                  ['Wedding', 'Birthday', 'Anniversary', 'Other'],
                  { prompt: 'Select event type' },
                  class: "form-control"
              %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :date, "Event Date" %>
              <%= f.date_field :date, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :description, "Description" %>
              <%= f.text_area :description, class: "form-control", rows: 3 %>
            </div>

            <%= f.submit "Create Event", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- My Events Box -->
    <div class="col-md-6 mb-4">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h3 class="mb-0">My Events</h3>
        </div>
        <div class="card-body">
          <div id="events-list">
            <% if @events&.any? %>
              <% @events.each do |event| %>
                <div class="event-card mb-3 border rounded p-3">
                  <h4><%= event.name %></h4>
                  <p class="text-muted">
                    <strong>Type:</strong> <%= event.event_type %><br>
                    <strong>Date:</strong> <%= event.date&.strftime('%B %d, %Y') %>
                  </p>
                  <p><%= event.description %></p>
                  <div class="btn-group">
                    <%= link_to "Edit", edit_event_path(event), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Delete", event_path(event),
                        method: :delete,
                        data: { confirm: "Are you sure?" },
                        class: "btn btn-sm btn-outline-danger" %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="text-center text-muted">No events created yet.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <script>
    document.addEventListener('turbo:load', function() {
      // Add any JavaScript functionality here
      const eventsList = document.getElementById('events-list');

      // Example: Refresh events list periodically
      setInterval(function() {
        if (eventsList) {
          Turbo.visit(window.location.href, { action: "replace" });
        }
      }, 60000); // Refresh every minute
    });
  </script>
<% end %>
