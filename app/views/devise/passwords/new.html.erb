<div class="login-container">
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card text-center p-5 shadow-lg border-0">
      <div class="text-center mb-4">
        <i class="fas fa-key fa-3x text-primary mb-3"></i>
        <h2 class="text-primary fw-bold">Reset Password</h2>
        <p class="text-muted">Enter your email to receive reset instructions</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group mb-3">
            <%= f.label :email, class: "form-label fw-bold" %>
            <%= f.email_field :email,
                class: "form-control",
                placeholder: "Enter your email",
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send Reset Instructions", class: "btn btn-primary btn-lg w-100 mb-3" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<style>
.login-container {
  background: linear-gradient(135deg, #ec4aa9 0%, #ff3c00 100%);
  min-height: 100vh;
  position: relative;
}

.login-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('3.png') center/cover;
  opacity: 0.1;
  z-index: 0;
}

.login-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  max-width: 450px;
  width: 100%;
  position: relative;
  z-index: 10;
  transition: all 0.3s ease;
}

.login-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.form-control {
  border-radius: 10px;
  border: 2px solid #e9ecef;
  padding: 0.75rem 1rem;
  transition: all 0.3s ease;
}

.form-control:focus {
  border-color: #ec4aa9;
  box-shadow: 0 0 0 0.2rem rgba(236, 74, 169, 0.25);
}

.btn-primary {
  background: linear-gradient(45deg, #ec4aa9, #ff3c00);
  border: none;
  border-radius: 10px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(236, 74, 169, 0.4);
}

.text-primary {
  color: #ec4aa9 !important;
}

@media (max-width: 768px) {
  .login-card {
    margin: 1rem;
    padding: 2rem !important;
  }
}
</style>
